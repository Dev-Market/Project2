
  <h2>Create your Item</h2>
   <form action="/item/create" method="post"{{!-- enctype="multipart/form-data--}}> 

    <label> Title
      <input type="text" name="title" placeholder="Your Item Title" />
    </label>


    <label> Description:
        <textarea type="text" name="description" cols="30" rows="4" placeholder="In few your describe your product"> </textarea>
    </label>

    <label> Price
      <input type="number" name="price" placeholder="Price" min="0" />
    </label>
     <label> Condition
      <input type="text" name="condition" placeholder="Is your product new? Or is it used?" />
    </label>
    <label>Image:
          <input type="file" name="image" />
        </label>
        <label> Contact Email:
          <input type="email", name="email", placeholder="example@email.xxx"/>
        </label>

    <button type="submit">Create</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
