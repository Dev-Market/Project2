<h2>Create your Item</h2>
<form action="/item/create" method="post" enctype="multipart/form-data">

  <label>
    Title
    <input
      type="text"
      name="title"
      placeholder="Your Item Title"
      maxlength="20"
      required
    />
  </label>

  <label>
    Description:
    <textarea
      type="text"
      name="description"
      cols="30"
      rows="4"
      placeholder="In few your describe your product"
      required
    > </textarea>
  </label>

  <label>
    Price
    <input type="number" name="price" placeholder="Price" min="0" required />
  </label>

  <label>Condition</label>

  <select name="condition">
    <option value="New">New</option>
    <option value="Used">Used</option>
    <option value="Vintage">Vintage</option>
    <option value="Destroyed">Destroyed</option>
    <option value="In Need of Restoration">In Need of Restoration</option>
  </select>

  <label>Image:
    <input type="file" name="image" required />
  </label>

  <button type="submit">Create</button>

  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>