<h2 class="mx-3">Create your Item</h2>
<form action="/item/create" method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-7 mx-3">
      <label for="inputEmail4">Title</label>
      <input
        type="text"
        class="form-control"
        id="inputEmail4"
        name="title"
        placeholder="Your Item Title"
        maxlength="20"
        required
      />
    </div>
    <div class="form-group col-md-3">
      <label for="inputPassword4">Price</label>
      <input
        type="number"
        class="form-control"
        id="inputPassword4"
        name="price"
        placeholder="Price"
        min="0"
        required
      />
    </div>
  </div>
  <div class="form-group col-md-10">
    <label for="inputAddress">Description</label>
    <input
      type="text"
      class="form-control"
      id="inputAddress"
      type="text"
      name="description"
      placeholder="In a few words describe your product"
      maxlength="150"
      required
    />
  </div>

  <div class="form-group col-md-5">
    <label for="inputState">Condition</label>
    <select
      class="custom-select my-1 mr-sm-2"
      id="inlineFormCustomSelectPref"
      name="condition"
    >
      <option value="New">New</option>
      <option value="Used">Used</option>
      <option value="Vintage">Vintage</option>
      <option value="Destroyed">Destroyed</option>
      <option value="In Need of Restoration">In Need of Restoration</option>
    </select>
  </div>
  <div class="form-group col-md-5">
    <label for="inputZip">Image</label>
    <input
      type="file"
      class="form-control"
      id="inputZip"
      name="image"
      required
    />
  </div>

  <button type="submit" class="btn btn-primary mx-3">Create new Item</button>
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>