<h2>Edit the item: {{this.title}}</h2>

<div id="create-form">
  <form action="/item/{{this._id}}/edit" method="POST"  enctype="multipart/form-data"> 
  
    <label> Title
      <input type="text" value = "{{this.title}}"name="title" placeholder="Your Item Title" />
    </label>


    <label> Description:
        <input type="text" value="{{this.description}}"name="description" cols="30" rows="4" />
    </label>

    <label> Price
      <input type="number" value ="{{this.price}}" name="price"/>
    </label>
     <label>Condition</label>

<select name="condition" value="{{this.condition}}">
  <option value="New">New</option>
  <option value="Used">Used</option>
  <option value="Vintage">Vintage</option>
  <option value="Destroyed">Destroyed</option>
  <option value="In Need of Restoration">In Need of Restoration</option>
</select>
    <label>Image:
           <input type="file" name="image" {{!--value="{{this.image}}"--}}/> 
        </label>


    <button type="submit">Save Changes</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>